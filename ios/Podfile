# Uncomment this line to define a global platform for your project
platform :ios, '13.0'

# CocoaPods' integration mode defines how Pods are linked to your project.
# We recommend using 'use_frameworks!' for new projects because it is recommended by Apple
# for swift projects
use_frameworks!

# This function finds the path to your Flutter SDK
def flutter_root
  generated_xcode_props = File.read(File.join(File.dirname(__FILE__), 'Flutter', 'Generated.xcconfig')) rescue nil
  if generated_xcode_props != nil
    props_values = Hash[generated_xcode_props.scan(/(\S+)\s*=\s*(\S+)/)]
    return props_values['FLUTTER_ROOT']
  end
  raise "Could not find FLUTTER_ROOT in Generated.xcconfig. Please run 'flutter pub get' in your project root."
end

# 1. Load the helper scripts from your FLUTTER SDK
require File.join(flutter_root, 'packages', 'flutter_tools', 'bin', 'podhelper')

# 2. Check if the plugins file exists in your PROJECT ROOT
plugins_path = File.join('..', '.flutter-plugins-dependencies')

# *** THIS IS THE FIX ***
# Only require the file if it actually exists.
if File.exist?(plugins_path)
  require plugins_path
end

target 'Runner' do
  use_frameworks!
  use_modular_headers!

  # This function comes from the podhelper script
  flutter_install_all_ios_pods File.dirname(File.realpath(__FILE__))
end

post_install do |installer|
  installer.pods_project.targets.each do |target|
    flutter_additional_ios_build_settings(target)
  end
end